{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": [
    "Number of deaths 2019",
    "Number of deaths 2010",
    "Number of deaths 2000",
    "Number of deaths 1990"
  ],
  "title": {
    "text":"Different Age Group Of Deaths Caused By Indoor Air Pollution",
    "fontSize": 28,
    "dx": 180
    },
  "columns": 2,
  "spec": {
    "data": {
      "url": "data/world_deaths_airpollution_by_age.csv"
    },
    "width": 500,
    "height": 370,
    "mark": {"type": "bar", "cornerRadius": 8},
    "encoding": {
      "x": {
        "field": "Age_type",
        "type": "nominal",
        "title": "Age Group",
        "axis": {
          "labelFontSize": 11,
          "labelFontWeight":"bold",
          "titleFontSize": 12

        }
      },
      "y": {
        "field": {"repeat": "repeat"},
        "type": "quantitative",
        "scale": {"domain": [0, 1600000]},
        "axis": {
          "labelFontSize": 12,
          "titleFontSize": 12
        }
      },
      "tooltip": [
        {
          "field": {"repeat": "repeat"},
          "type": "quantitative"
        }
      ],
      "color": {"field": "Age_type",
        "type": "nominal",
        "scale": {
          "domain": [
            "70 and above",
            "between 50-69",
            "between 15-49",
            "between 5-14",
            "Under 5"
          ],
          "range": [
            "#e41a1c",
            "#984ea3",
            "#ff7f00",
            "#725e34",
            "#377eb8"
          ]
        },
        "title": "Age Group",
        "legend": {
          "labelFontSize": 12,
          "offset": -100,
          "titleFontSize": 12
        }
      }
    }
  },
  "config": {"background": "rgb(222, 223, 213)"}
}