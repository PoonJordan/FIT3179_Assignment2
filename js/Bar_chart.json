{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "repeat": [
    "Number_of_deaths_2019",
    "Number_of_deaths_2010",
    "Number_of_deaths_2000",
    "Number_of_deaths_1990"
  ],
  "title": "Top 5 countries in SEA Deaths Cause By Indoor Air Pollution ",
  "columns": 2,
  "spec": {
    "data": {
      "url": "data/world_deaths_airpollution_by_age.csv"
    },
    "width": 400,
    "height": 350,
    "mark": "bar",
    "encoding": {
      "x": {
        "field": "Age_type",
        "type": "nominal",
        "title": "Age Group"
        
      },
      "y": {
        "field": {"repeat": "repeat"},
        "type": "quantitative",
        "scale": {"domain": [0, 1600000]}
      },
      "tooltip": [
        {
          "field": {"repeat": "repeat"},
          "type": "quantitative"
        }
      ],
      "color": {"field": "Age_type"}
    }
    
  }
}