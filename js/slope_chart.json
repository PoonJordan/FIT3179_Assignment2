{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/pollution_index.json"},
  "title": {
    "text":"ASEAN Countries Air Pollution Index",
    "fontSize": 20
    },

  "mark": {"type" :"line", "point": {"filled": false , "fill": "white", "size": 35} , "strokeWidth":4},
  "width": {"step": 400},
  "height": 400,
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "scale": {"padding": 0.1},
      "title": "Year"
    },
    "y": {
      "field": "Pollution_index",
      "type": "quantitative",
      "title": "Pollution Index"
    },
    "color": {"field": "site", "type": "nominal",
      "scale": {
        "domain": [
          "Malaysia",
          "Brunei",
          "Cambodia",
          "Indonesia",
          "Laos",
          "Myanmar",
          "Philippines",
          "Singapore",
          "Thailand",
          "Vietnam"
        ],
        "range": [
          "#808080",
          "#000000",
          "#FF0000",
          "#FFFF00",
          "#00FF00",
          "#00FFFF",
          "#0000FF",
          "#800080",
          "#808000",
          "#000080"
        ]
      }
    
    },

    "tooltip" : [{"field": "site", "type": "nominal", "title": "Country"},
      {"field": "year", "type": "quantitative", "title": "Year"},
      {"field": "Pollution_index", "type": "quantitative", "title": "Pollution Index"}
    ]
  },
  "config": {"background": "rgb(222, 223, 213)"}
}