{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {"url": "data/pollution_index.json"},
  "title": {
    "text":"ASEAN Countries Air Pollution Index",
    "fontSize": 20
    },

  "mark": {"type" :"line", "point": {"filled": false , "fill": "white", "size": 35} , "strokeWidth":4},
  "width": {"step": 400},
  "height": 400,
  "encoding": {
    "x": {
      "field": "year",
      "type": "ordinal",
      "scale": {"padding": 0.1},
      "title": "Year"
    },
    "y": {
      "aggregate": "median",
      "field": "Pollution_index",
      "type": "quantitative"
    },
    "color": {"field": "site", "type": "nominal"},

    "tooltip" : [{"field": "site", "type": "nominal"},
      {"field": "year", "type": "quantitative"},
      {"field": "Pollution_index", "type": "quantitative"}
    ]
  },
  "config": {"background": "rgb(222, 223, 213)"}
}