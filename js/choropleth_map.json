  "vconcat": [
    {
      "title": "Death cause by Indoor Air pollution in 2019",
      "width": 1000,
      "height": 600,
      "projection": {"type": "equalEarth"},
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/7_others/oceans.topojson",
            "format": {"type": "topojson", "feature": "oceans"}
          },
          "mark": {"type": "geoshape", "fill": "skyblue"}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
          },
          "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "transform": [
            {
              "calculate": "'Data is not available in ' + datum.properties.NAME",
              "as": "note"
            }
          ],
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
          "encoding": {"tooltip": {"field": "note"}}
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "fill": "grey"},
          "encoding": {
            "color": {
              "field": "population_clean_fuels_and_technologies_for_cooking",
              "type": "quantitative",
              "scale": {"type": "linear","domain": [10, 50, 100],"range": ["#d7392f", "#f37c4a", "#fdbc71", "#fce99c", "#e6f29c", "#b5df79", "#72c264", "#299a51"]},
              "title": "Number of Deaths"
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "population_clean_fuels_and_technologies_for_cooking",
                "type": "quantitative",
                "title": "Percantage of population have access to clean fuel"
              },
              {
                "field": "population",
                "type": "quantitative",
                "title": "Population"
              },
              {
                "field": "Deaths per 10,000 Population",
                "type": "quantitative",
                "format": ".2f"
              }
            ]
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/access_to_clean_fuel_2020.csv"},
                "key": "Entity",
                "fields": ["Entity", "population_clean_fuels_and_technologies_for_cooking"]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            }
          ]
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {"type": "geoshape", "stroke": "white"},
          "encoding": {
            "color": {
              "field": "population_clean_fuels_and_technologies_for_cooking",
              "type": "quantitative",
              "scale": {"type": "linear"},
              "title": "Number of Deaths"
            }
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/access_to_clean_fuel_2020.csv"},
                "key": "Entity",
                "fields": [
                  "population_clean_fuels_and_technologies_for_cooking",
                  "population",
                  "Entity"
                ]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            },
            {
              "filter": "Country_selection == null || datum.Entity == Country_selection"
            }
          ]
        },
        {
          "data": {
            "url": "data/ne_110m.json",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "text",
            "baseline": "middle",
            "dx": -5,
            "fontSize": 15,
            "fontStyle": "italic"
          },
          "encoding": {
            "longitude": {
              "field": "properties.LABEL_X",
              "type": "quantitative"
            },
            "latitude": {"field": "properties.LABEL_Y", "type": "quantitative"},
            "text": {"field": "Entity", "type": "nominal"},
            "color": {"value": "black"},
            "opacity": {
              "condition": {
                "test": "datum['Entity'] == 'Malaysia' || datum['Entity'] == 'Brazil' || datum['Entity'] == 'Russia' || datum['Entity'] == 'China' ||  datum['Entity'] == 'Australia' || datum['Entity'] == 'New Zealand' || datum['Entity'] == 'Italy' || datum['Entity'] == 'Yemen' || datum['Entity'] == 'United States of America'",
                "value": 1
              },
              "value": 0
            },
            "tooltip": [
              {
                "field": "properties.NAME",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "population_clean_fuels_and_technologies_for_cooking",
                "type": "quantitative",
                "title": "Percantage of population have access to clean fuel"
              },
              {
                "field": "population",
                "type": "quantitative",
                "title": "Population"
              },
              {
                "field": "Deaths per 10,000 Population",
                "type": "quantitative",
                "format": ".2f"
              }
            ]
          },
          "transform": [
            {
              "lookup": "properties.NAME",
              "from": {
                "data": {"url": "data/access_to_clean_fuel_2020.csv"},
                "key": "Entity",
                "fields": [
                  "population_clean_fuels_and_technologies_for_cooking",
                  "population",
                  "Entity"
                ]
              }
            },
            {
              "calculate": "datum.Deaths_Cause_By_Air_Pollution/datum.population * 10000",
              "as": "Deaths per 10,000 Population"
            }
          ]
        }
      ]
